<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:id="@+id/inspeccionCard">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="456123456"
            android:id="@+id/nroInspectTextView"
            android:paddingTop="20dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_toEndOf="@+id/coverImageViewInspeccion"
            android:layout_marginStart="40dp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/coverImageViewInspeccion"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/icono_inspeccion_l"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textStyle="italic"
            android:id="@+id/cantidadMuestraTextView"
            android:layout_below="@+id/nroInspectTextView"
            android:layout_alignStart="@+id/nroInspectTextView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05/08/2016"
            android:textStyle="italic"
            android:id="@+id/fechaTextView"
            android:layout_below="@+id/cantidadMuestraTextView"
            android:layout_alignStart="@+id/cantidadMuestraTextView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chorrillos"
            android:textStyle="italic"
            android:id="@+id/lugarTextView"
            android:layout_below="@+id/fechaTextView"
            android:layout_alignStart="@+id/fechaTextView"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>